<Window x:Class="EjercicioA3DOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioA3DOM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="765">
    <Grid Height="720" VerticalAlignment="Bottom" Margin="0,0,-277,0">
        <TextBlock x:Name="txtLabel" HorizontalAlignment="Left" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="660" FontSize="48" FontFamily="Arial Black" FontWeight="Bold" Margin="50,332,0,0"/>
        <Button x:Name="btn_message" Content="Click Me" HorizontalAlignment="Left" Margin="50,590,0,0" VerticalAlignment="Top" Height="56" Width="660" FontSize="22" FontWeight="Bold" Cursor="Hand" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Click="btn_message_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="34" Margin="50,532,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="660" FontSize="18"/>
        <Label x:Name="lbl_name" Content="Nombre:" HorizontalAlignment="Left" Margin="50,501,0,0" VerticalAlignment="Top" Width="274" FontWeight="Bold"/>

    </Grid>

</Window>
